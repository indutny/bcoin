#!/usr/bin/env node

'use strict';

process.title = 'bcoin';

var bcoin = require('../');
var co = bcoin.co;
var node;

node = new bcoin.fullnode({
  config: true,
  argv: true,
  env: true,
  logFile: true,
  logLevel: 'debug',
  db: 'leveldb',
  listen: true,
  loader: require
});

node.on('error', function(err) {
  ;
});

co.spawn(function *() {
  yield node.open();
  yield node.connect();
  node.startSync();
}).catch(function(err) {
  throw err;
});
